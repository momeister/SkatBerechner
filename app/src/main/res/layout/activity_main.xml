<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="0dp"

            android:layout_height="144dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/EichelBubeFeld"
                    android:layout_width="99dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:contentDescription="@string/app_name"
                    android:padding="2dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/skatbuben_1"
                    tools:ignore="MissingConstraints">

                </androidx.constraintlayout.utils.widget.ImageFilterButton>

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/GruenerBubeFeld"
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="32dp"
                    android:layout_toEndOf="@+id/EichelBubeFeld"
                    android:contentDescription="@string/app_name"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/skatbuben_2">

                </androidx.constraintlayout.utils.widget.ImageFilterButton>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="152dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            tools:ignore="MissingConstraints">

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/HerzBubeFeld"
                    android:layout_width="99dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:contentDescription="@string/app_name"
                    android:padding="2dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/skatbuben_3"
                    tools:ignore="MissingConstraints">

                </androidx.constraintlayout.utils.widget.ImageFilterButton>

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/SchellBubeFeld"
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="32dp"
                    android:layout_toEndOf="@+id/HerzBubeFeld"
                    android:contentDescription="@string/app_name"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/skatbuben_4">

                </androidx.constraintlayout.utils.widget.ImageFilterButton>

        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>