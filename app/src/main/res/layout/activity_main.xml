<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="0dp"

            android:layout_height="144dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/EichelBubeFeld"
                    android:layout_width="99dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:contentDescription="@string/app_name"
                    android:padding="2dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/skatbuben_1_dark"
                    tools:ignore="MissingConstraints">

                </androidx.constraintlayout.utils.widget.ImageFilterButton>

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/GruenerBubeFeld"
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="32dp"
                    android:layout_toEndOf="@+id/EichelBubeFeld"
                    android:contentDescription="@string/app_name"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/skatbuben_2_dark">

                </androidx.constraintlayout.utils.widget.ImageFilterButton>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="0dp"
            android:layout_height="152dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            tools:ignore="MissingConstraints">

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/HerzBubeFeld"
                    android:layout_width="99dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:contentDescription="@string/app_name"
                    android:padding="2dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/skatbuben_3_dark"
                    tools:ignore="MissingConstraints">

                </androidx.constraintlayout.utils.widget.ImageFilterButton>

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/SchellBubeFeld"
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="32dp"
                    android:layout_toEndOf="@+id/HerzBubeFeld"
                    android:contentDescription="@string/app_name"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/skatbuben_4_dark">

                </androidx.constraintlayout.utils.widget.ImageFilterButton>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="146dp"
            android:layout_height="326dp"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/relativeLayout"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/EichelSpiel"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="1dp"
                    android:background="#848484"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/eichel_dark"></androidx.constraintlayout.utils.widget.ImageFilterButton>

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/BlattSpiel"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/EichelSpiel"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="0dp"
                    android:background="#848484"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blatt_dark"></androidx.constraintlayout.utils.widget.ImageFilterButton>

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/HerzSpiel"
                    android:layout_width="144dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/BlattSpiel"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="0dp"
                    android:background="#848484"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/herz_dark"></androidx.constraintlayout.utils.widget.ImageFilterButton>

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/SchellSpiel"
                    android:layout_width="144dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/HerzSpiel"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="0dp"
                    android:background="#848484"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/schell_dark"></androidx.constraintlayout.utils.widget.ImageFilterButton>

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/GrandeSpiel"
                    android:layout_width="144dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/SchellSpiel"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="0dp"
                    android:background="#848484"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/grand_dunkel"></androidx.constraintlayout.utils.widget.ImageFilterButton>

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/NullSpiel"
                    android:layout_width="144dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/GrandeSpiel"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="0dp"
                    android:background="#848484"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/null_game_dunkel"></androidx.constraintlayout.utils.widget.ImageFilterButton>

        </RelativeLayout>

        <TextView
            android:id="@+id/ansage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Ansage:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="239dp"
            app:layout_constraintBottom_toTopOf="@+id/ReizView"
            app:layout_constraintTop_toBottomOf="@+id/ansage"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="59dp">

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/KeineAnsage"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="295dp"
                    android:background="#ffffff"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ansage_keine"></androidx.constraintlayout.utils.widget.ImageFilterButton>

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/HandAnsage"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="131dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="140dp"
                    android:background="#848484"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ansage_hand_dunkel"></androidx.constraintlayout.utils.widget.ImageFilterButton>

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/OuverteAnsage"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="286dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="0dp"
                    android:background="#848484"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ansage_ouvert_dunkel"></androidx.constraintlayout.utils.widget.ImageFilterButton>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/AnsageAnsage"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="290dp"
                    android:layout_marginEnd="1dp"
                    android:background="#848484"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ansage_angesagt_dunkel"></androidx.constraintlayout.utils.widget.ImageFilterButton>


        </RelativeLayout>

        <TextView
            android:id="@+id/ReizView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="108dp"
            android:gravity="center"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>